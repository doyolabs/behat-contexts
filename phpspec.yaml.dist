formatter.name: pretty
suites:
    doyo_behat:
        namespace: Doyo\Behat
        psr4_prefix: Doyo\Behat

extensions:
    Doyo\PhpSpec\CoverageExtension:
        whitelist:
            - src
        format:
            - php
            - html
        output:
            php: build/cov/03-phpspec.cov
            html: build/phpspec
